<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <title>Places you've been!</title>
</head>
<body>
    <h1>Places you've been!</h1>

      {% if places is not empty %}
          <p>Here are all your places:</p>
          <ul>
              {% for place in places %}
                  <li>{{ place.getDescription }} </li>
                  <ul>
                      <li>{{ place.getDuration }}</li>
                      <li><img src="{{ place.getImage }}"></li>
                  </ul>
              {% endfor %}
          </ul>
      {% endif %}

      <form action='/places' method='post'>
          <label for='description'>Place Description </label>
          <input id='description' name='description' type='text'>
          <br>
          <label for='duration'>Duration of trip (in days) </label>
          <input id='duration' name='duration' type='number'>
          <br>
          <label for='image'> Post image link here </label>
          <input id='image' name='image' type='text'><br>
          <button type='submit'>Add place</button>
      </form>
      <form action='/delete_places' method='post'>
          <button type='submit'>Clear</button>
      </form>
</body>
</html>

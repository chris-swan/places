<html>
<head>
    <title>Places you've been!</title>
</head>
<body>
    <h1>Places you've been!</h1>

      {% if places is not empty %}
          <p>Here are all your places:</p>
          <ul>
              {% for place in places %}
                  <li>{{ place.getDescription }} </li>
                  <ul>
                      <li>{{ place.getDuration }}</li>
                  </ul>
              {% endfor %}
          </ul>
      {% endif %}

      <form action='/places' method='post'>
          <label for='description'>Place Description </label>
          <input id='description' name='description' type='text'>
          <label for='duration'><br>Duration of trip (in days) </label>
          <input id='duration' name='duration' type='number'><br>
          <button type='submit'>Add place</button>
      </form>
      <form action='/delete_places' method='post'>
          <button type='submit'>Clear</button>
      </form>
</body>
</html>
